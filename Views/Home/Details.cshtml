@model Sinav_Busra.Models.ViewModels.ArticleViewModel

@{
    ViewData["Title"] = Model.Title;
}

<div class="container">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <article>
                <!-- Başlık -->
                <header class="mb-4">
                    <h1 class="fw-bolder mb-1">@Model.Title</h1>
                    <div class="text-muted fst-italic mb-2">
                        <span><i class="bi bi-person"></i> @Model.AuthorName</span>
                        <span class="ms-3"><i class="bi bi-calendar"></i> @Model.CreatedDate.ToString("dd.MM.yyyy")</span>
                    </div>
                    
                    <!-- Kategoriler -->
                    @if (Model.CategoryNames.Any())
                    {
                        <div class="mb-3">
                            @foreach (var categoryName in Model.CategoryNames)
                            {
                                <span class="badge bg-secondary me-1">@categoryName</span>
                            }
                        </div>
                    }
                </header>
                
                <!-- İçerik -->
                <section class="mb-5">
                    <p class="fs-5 mb-4">@Model.Content</p>
                </section>
                
                <!-- Geri dön -->
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Tüm Makalelere Dön</a>
            </article>
        </div>
    </div>
</div> 